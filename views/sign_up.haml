%form{:action => "/users/sign_up", :method => "post"}
  %label{:name => "fname"} First Name
  %input{:type => "text", :name => "fname"}

  %label{:name => "lname"} Last Name
  %input{:type => "text", :name => "lname"}

  %label{:name => "username"} Username
  %input{:type => "text", :name => "username"}

  %label{:name => "bio"} Bio
