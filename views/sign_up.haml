  %label{:name => "url"} URL
  %input{:type => "text", :name => "url"}

  %label{:name => "city"} City
  %input{:type => "text", :name => "city"}

  %label{:name => "state"} State
  %input{:type => "text", :name => "state"}

  %br

  %input{:type => "submit", :class => "btn"}

  